<%- include('partials/_header') %>

<div class="container mt-5">
<div class="row">
    <div class="col-md-5">
        <div class="card">
            <div class="cart-body">
                <form action="/medicos/update/<%= data.id %>" method="post">
                    <div class="form-group">
                        <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <input type="text" name="correo" value="<%= data.correo %>" class="form-control" placeholder="Correo">
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" value="<%= data.direccion %>" class="form-control" placeholder="DirecciÃ³n">
                    </div>
                    <div class="form-group">
                        <label for="especialidad">Especialidad:</label>
                        <select name="id_especialidad" class="form-control">
                            <% for (var i = 0; i < especialidades.length; i++) { %>
                                <option value="<%= especialidades[i].id %>" <%= data.id_especialidad == especialidades[i].id ? 'selected' : '' %>><%= especialidades[i].nombre %></option>
                            <% } %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Editar Medico</button>
                </form>
                
            </div>
        </div>
    </div>
</div>
</div>

<%- include('partials/_footer') %>